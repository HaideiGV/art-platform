<h2>Show gallery</h2>

<ul>

  <li>
    <strong>Master:</strong>
    <a href="/masters/<%= @gallery.master_id %>"><%= @gallery.master_id %></a>
  </li>

  <li>
    <strong>Image url:</strong>
    <%= @gallery.image_url %>
  </li>

  <li>
    <strong>Rate:</strong>
    <%= @gallery.rate %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @gallery.description %>
  </li>

</ul>

<%= link "Edit", to: gallery_path(@conn, :edit, @gallery) %>
<%= link "Back", to: gallery_path(@conn, :index) %>
